{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "linux-launcher",
    "version": "0.1.0",
    "identifier": "com.linux-launcher.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "transparent": true,
                "decorations": false,
                "alwaysOnTop": true,
                "fullscreen": false,
                "resizable": false,
                "width": 600,
                "height": 200,
                "center": true,
                "skipTaskbar": true,
                "focus": true
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}